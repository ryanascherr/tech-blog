<div class="new-post-box">
    <button class="new-post-btn"><h2>+ New Post</h2></button>
</div>

<div class="new-post-parent hidden">
    <div class="login-signup-container">
        <div class="login-signup-header">
            <h2>Create New Post</h2>
        </div>
        <div class="login-signup-body">
            <div class="username">
                <p>Title</p>
                <input type="text" class="username-signup new-post-title">
            </div>
            <div class="password">
                <p>Content</p>
                <textarea name="" id="" cols="30" rows="5" class="password-signup new-post-content"></textarea>
            </div>
            <div class="login-signup-box">
                <button class="signup-btn create-new-post">Create!</button>
            </div>
        </div>
    </div>
</div>

<div class="edit-delete-post-parent hidden">
    <div class="login-signup-container">
        <div class="login-signup-header">
            <h2>Edit Post</h2>
        </div>
        <div class="login-signup-body">
            <div class="username">
                <p>Title</p>
                <input type="text" class="username-signup old-post-title">
            </div>
            <div class="password">
                <p>Content</p>
                <textarea name="" id="" cols="30" rows="5" class="password-signup  old-post-content"></textarea>
            </div>
            <div class="login-signup-box">
                <button class="signup-btn update-post">Update Post</button>
                <button class="signup-btn delete-post">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="all-posts">
    <div class="post-title">
        <h2>Posts</h2>
    </div>
    {{#each posts as |post|}}
    <div class="previous-post">
        <div class="previous-post-title">
            <a class="click" data-id="{{post.id}}" data-title="{{post.title}}" data-content="{{post.content}}" href="#"><p>{{post.title}}</p></a>
        </div>
        <div class="previous-post-user">
            <p class="italic">Posted on {{format_date post.date_created}}</p>
        </div>
    </div>
    {{/each}}
</div>

