<div class="all-posts">
    {{#each posts as |post|}}
    <div class="post">
        <div class="post-title">
            <a href="/post/{{post.id}}"><h3>{{post.title}}</h3></a>
            <h5>Posted by {{post.user.username}} on {{post.date_created}}</h5>
        </div>
        <div class="post-content">
            <p>{{post.content}}</p>
        </div>
    </div>
    {{/each}}
</div>